<script>

    window.onload = chart;

    function chart() {
        function makesvg(percentage1, inner_text = "") {
            var svg = "";
            var percentage = "";
            var percentage_str = "";

            percentage_str = "Cerrado";
            percentage = "50";                           

            var abs_percentage = Math.abs(percentage).toString();
            var classes = "";

            inner_text = "";
            if (percentage_str == "") {
                classes = "danger-stroke circle-chart__circle--negative";
            } else if (percentage_str == "Abierto") {
                classes = "#00ff67";
            } else {
                classes = "danger-stroke circle-chart__circle--negative";
            }

            svg = '<svg class="ramos" viewbox="0 0 33.83098862 33.83098862" xmlns="http://www.w3.org/2000/svg">'
                + '<circle class="RChart-Relleno-background" cx="16.9" cy="16.9" r="15.9" />'
                + '<circle class="RChart-Relleno' + classes + '"'
                + 'stroke-dasharray="' + abs_percentage + ',100"    cx="16.9" cy="16.9" r="15.9" />'
                + '<g class="circle-chart__info">'
                + '<text class="circle-chart__percent" x="17.9" y="15.5">' + percentage_str + '</text>';

            if (inner_text) {
                svg += '<text class="circle-chart__subline" x="16.91549431" y="22">' + inner_text + '</text>'
            }

            svg += ' </g></svg>';
            return svg
        }

        (function ($) {
            $.fn.circlechart = function () {
                this.each(function () {
                    var percentage = $(this).data("percentage");
                    var inner_text = $(this).text();
                    $(this).html(makesvg(percentage, inner_text));
                });
                return this;
            };
        }(jQuery));

        $(function () {
            $('.circlechart').circlechart();
        });


    }

</script>



