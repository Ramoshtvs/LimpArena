
@{
    ViewBag.Title = "CribadoProceso2";
}

<script src="~/Scripts/Highcharts/highcharts.js"></script>
<script src="~/Scripts/Highcharts/pareto.js"></script>
<script src="~/Scripts/Highcharts/exporting.js"></script>
<script src="~/Scripts/Highcharts/export-data.js"></script>
<script src="~/Scripts/Highcharts/accessibility.js"></script>
<link href="~/fontawesome-free-6.1.2-web/css/all.css" rel="stylesheet" />
<link href="~/Content/bootstrap5/bootstrap.min.css" rel="stylesheet" />


<div class="row">
    <div class="col-lg-7" style="text-align:end"><h1>Cribado</h1></div>

    <div class="col-lg-4" style="text-align:end; padding-top:17px">
        <input id="fecha" type="date" onchange="chart()" style="font-size: 16px;  width:200px; height:40px; text-transform: uppercase; font-weight:bold;" />
    </div>
</div>


<div class="row responsive" style="padding: 10px">


    <div class="col-md-3" style=" width: 220px; height: auto; word-wrap: break-word;">
        <div class="card">
            <div class="card-header">
                <a><i class="fa-solid fa-laptop-code"></i> DATOS</a>
            </div>
            <div class="card-body">
                <h3> Tamaño Del Grano:</h3>
                <h3 id="lblTamaño"> </h3>
                <br />
                <h3> Reciduo:</h3>
                <h3 id="lblReciduo"> </h3>
                <br />
                <h3> Contaminación:</h3>
                <h3 id="lblContaminacion"> </h3>
                <br />
                <h3> Fecha Y Hora:</h3>
                <h3 id="lblFecha" style="font-size:medium"> </h3>
            </div>

        </div>
    </div>

    <div class="col-md-8">
        <div class="row">
            <figure class="highcharts-figure">
                <div>
                    <div id="GrafCribadoContaminacion" style="height:250px; width: 1100px;box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;"></div>

                </div>
            </figure>
        </div>
        <div class="row" style="padding-top:5px">
            <figure class="highcharts-figure">
                <div>
                    <div id="GrafCribadoResiduo" style="height:250px; width: 1100px;box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;"></div>
                </div>
            </figure>
        </div>


    </div>
</div>

<script>
    setInterval("chart()", 10000);
    window.onload = time;
    function time() {
        var now = new Date();
        var day = ("0" + (now.getDate())).slice(-2);
        var mes = ("0" + (now.getMonth() + 1)).slice(-2);
        var year = now.getFullYear();
        $("#fecha").val(year + "-" + mes + "-" + day);
        chart()
    }

    function chart() {
        var rd = {};
        rd.Fecha = $("#fecha").val();

        $.ajax({
            type: "POST",
            url: '@Url.Action("CribadoProceso2")',
            data: '{rd: ' + JSON.stringify(rd) + '}',
            dataType: "json",
            contentType:"application/json; chartset=uft-8",
            success: function (Response) {
                if (Response != null) {
                    $("#lblTamaño").html(Response.VarTGranoCR);
                    $("#lblReciduo").html(Response.VarResiduoCR);
                    $("#lblFecha").html(Response.VarFechaCR);
                    $("#lblContaminacion").html(Response.VarContaminacionCR);

                    Highcharts.chart('GrafCribadoResiduo', {
                        chart: {
                            type: 'column'
                        },
                        title: {
                            text: 'Residuo'
                        },
                        accessibility: {
                            announceNewData: {
                                enabled: true
                            }
                        },
                        credits: {
                            enabled: false
                        },
                        xAxis: {
                            categories: Response.lstFechaCr,
                            labels: {
                                rotation: 45,
                                style: { color: 'Black' }
                            }
                        },
                        yAxis: {
                            title: {
                                text: 'Residuo'
                            }

                        },
                        legend: {
                            enabled: false
                        },
                        plotOptions: {
                            series: {
                                borderWidth: 0,
                                dataLabels: {
                                    enabled: true,
                                    format: '{point.y:.1f} %'
                                }
                            }
                        },

                        series: [
                            {
                                name: 'Residuo',
                                colorByPoint: true,
                                data: Response.lstResiduoCr
                            }
                        ]
                    });

                    Highcharts.chart('GrafCribadoContaminacion', {
                        chart: {
                            type: 'column'
                        },
                        title: {
                            text: 'Contaminación'
                        },
                        accessibility: {
                            announceNewData: {
                                enabled: true
                            }
                        },
                        credits: {
                            enabled: false
                        },
                        xAxis: {
                            categories: Response.lstFechaCr,
                            labels: {
                                rotation: 45,
                                style: { color: 'Black' }
                            }
                        },
                        yAxis: {
                            title: {
                                text: 'Contaminación'
                            }

                        },
                        legend: {
                            enabled: false
                        },
                        plotOptions: {
                            series: {
                                borderWidth: 0,
                                dataLabels: {
                                    enabled: true,
                                    format: '{point.y:.1f} %'
                                }
                            }
                        },

                        series: [
                            {
                                name: 'Contaminación',
                                colorByPoint: true,
                                data: Response.lstContaminacionCr
                            }
                        ]
                    });
                } else {
                    alert('NULO');
                }
            },
        });
    }
</script>



